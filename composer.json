{
	"name": "threedi/tpotm",
	"type": "phpbb-extension",
	"description": "Have a Top Poster of the Month to show on your phpBB. Founder, Admins and Global Moderators are not included.",
	"homepage": "http://3d-i.github.io/tpotm/",
	"version": "1.0.2",
	"time": "2015-10-07",
	"license": "GPL-2.0",
	"authors":
	[
		{
			"name": "3Di",
			"email": "three3di@hotmail.it",
			"homepage": "https://github.com/3D-I",
			"role": "Lead Developer"
		},
		{
			"name": "Dicky (Richard Foote)",
			"email": "dicky@phpbb.com",
			"homepage": "https://www.phpbb.com/community/memberlist.php?mode=viewprofile&u=163542",
			"role": "Past Contributor for the phpBB 2.0.x MOD"
		},
		{
			"name": "RMcGirr83",
			"email": "rmcgirr83@gmail.com",
			"homepage": "https://github.com/rmcgirr83",
			"role": "Past Contributor for the phpBB 3.0.x MOD"
		}
	],
	"require":
	{
		"php": ">=5.3.3"
	},
	"require-dev":
	{
		"phpbb/epv": "dev-master"
	},
	"extra":
	{
		"display-name":
			"Top Poster Of The Month",
		"soft-require":
		{
			"phpbb/phpbb": ">=3.1.0-b3,<3.2.*@dev"
		},
		"version-check":
		{
			"host": "www.phpbb.com",
			"directory": "/customise/db/extension/top_poster_of_the_month",
			"filename": "version_check"
		}
	}
}